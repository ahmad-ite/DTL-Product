{
    "preset": "psr12",
    "rules": {
        "concat_space": {
            "spacing": "one"
        },
        "final_internal_class": false,
        "simplified_null_return": true,
        "braces": false,
        "new_with_braces": {
            "anonymous_class": false,
            "named_class": false
        },
        "single_trait_insert_per_statement": false
    },

    "exclude": ["my-specific/folder"]
}
